<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css"> <!-- por default, ele pesquisa a pasta public  -->
    <title>Document</title>
</head>
<body>


    <nav>
        <h4>FisioVR</h4>
        <ul class="menu">
            <li><a href="/profissional_profile">Inicio</a></li>
            <li><a href="/profissionalPerfil">Perfil</a></li>
            <li>
            	<a href="/meuspacientes">Pacientes</a>
               <!--<ul class="submenu1">
               	<li><a href="/pacientesconcluidos">Concluidos</a></li>
               	<li><a href="/pacientespendentes">Pendentes</a></li>
               </ul>-->
            </li>
            <li><a href="/desenvolvimento">Mensagens</a></li>
            <li><a href="/auth/logout">Sair</a></li>
        </ul> 
    </nav>

    <div class="container mt-4">
        <div class="row">
          <div class="container mt-4" style="margin: auto; width: 400px;">
           <h3>Meus Dados</h3><br>
            <form action="/profissionalPerfil" method="POST">
                    <div class="form-group">                       
                        <!--Forma que encontrei para conseguir passar o id do usuario para fazer o update dos dados-->
                        <input type="hidden" name="id_usuario" value={{infoperfil.id_usuario}}>
                        <!-- -->
                        <b>Nome: </b><input type="text" class="form-control" id="nome" name="nome" value={{infoperfil.nome}}><br>
                        
                        <span role="alert" id="erroNome" aria-hidden="true">
                            Campo nome vazio
                        </span>
                        
                        <b>Email: </b><input type="email" class="form-control" id="email" name="email" value={{infoperfil.email}}><br>
                        <span role="alert" id="erroEmail" aria-hidden="true">
                            Campo email vazio
                        </span>
                        
                        <b>CPF: </b><input type="text" class="form-control" id="cpf" name="cpf" value={{infoperfil.cpf}}><br>
                        <span role="alert" id="erroCPF" aria-hidden="true">
                            Campo CPF vazio
                        </span>
                        
                        <b>Telefone: </b><input type="tel" class="form-control" id="tel" name="tel" value={{infoperfil.telefone}}><br>
                        <span role="alert" id="erroTel" aria-hidden="true">
                            Campo telefone vazio
                        </span>

                        <b>CRM: </b><input type="text" class="form-control" id="crm" name="crm" value={{infoperfil.crm}}><br>
                        <span role="alert" id="erroCRM" aria-hidden="true">
                            Campo CRM vazio
                        </span>

                    </div>


		        <button id="submit" type="submit" class="btn btn-primary">Salvar</button>
            </form>
           </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <!-- Scritpt para as máscaras-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>
    
    <script type="text/javascript">
        $("#tel").mask("(00)00000-0000");
        $("#cpf").mask("000.000.000-00");
        $("#crm").mask("000000");


        //https://www.freecodecamp.org/portuguese/news/validacao-de-dados-como-verificar-dados-enviados-pelo-usuario-em-formularios-html-utilizando-javascript/
    
//verifica se os campos estão vazios e impede de enviar o formulário caso esteja
        const submit = document.getElementById("submit");
        submit.addEventListener("click", validate);

        function validate(e) {

        const nome = document.getElementById("nome");
       
    
        let valid = true;

        if (!nome.value) {
            const erroNome = document.getElementById("erroNome");
            erroNome.classList.add("visible");
            nome.classList.add("invalid");
            erroNome.setAttribute("aria-hidden", false);
            erroNome.setAttribute("aria-invalid", true);
            e.preventDefault();
        }
         if (!email.value) {
            const erroEmail = document.getElementById("erroEmail");
            erroEmail.classList.add("visible");
            email.classList.add("invalid");
            erroEmail.setAttribute("aria-hidden", false);
            erroEmail.setAttribute("aria-invalid", true);
            e.preventDefault();
        }

        if (!cpf.value) {
            const erroCPF = document.getElementById("erroCPF");
            erroCPF.classList.add("visible");
            cpf.classList.add("invalid");
            erroCPF.setAttribute("aria-hidden", false);
            erroCPF.setAttribute("aria-invalid", true);
            e.preventDefault();
        }

        if (!tel.value) {
            const erroTel = document.getElementById("erroTel");
            erroTel.classList.add("visible");
            tel.classList.add("invalid");
            erroTel.setAttribute("aria-hidden", false);
            erroTel.setAttribute("aria-invalid", true);
            e.preventDefault();
        }

        if (!crm.value) {
            const erroCRM = document.getElementById("erroCRM");
            erroCRM.classList.add("visible");
            crm.classList.add("invalid");
            erroCRM.setAttribute("aria-hidden", false);
            erroCRM.setAttribute("aria-invalid", true);
            e.preventDefault();
        }

            return valid;
        }

    </script>
    
</body>
</html>
